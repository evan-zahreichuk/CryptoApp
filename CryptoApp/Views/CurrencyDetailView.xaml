<Page x:Class="CryptoApp.Views.CurrencyDetailView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
      Title="CurrencyDetailView">
    <Page.Resources>
        <!-- Common Resources -->
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
        <SolidColorBrush x:Key="PageBackgroundBrush" Color="Black"/>
        <SolidColorBrush x:Key="TextForegroundBrush" Color="White"/>
        <SolidColorBrush x:Key="ButtonBackgroundBrush" Color="#FF1E3C72"/>
        <SolidColorBrush x:Key="ButtonForegroundBrush" Color="White"/>

        <!-- TimeFrameButtonStyle resource -->
        <Style x:Key="TimeFrameButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource ButtonBackgroundBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                    CornerRadius="5" 
                    Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Global style for ComboBoxItem to display items with black text -->
        <Style TargetType="ComboBoxItem">
            <Setter Property="Foreground" Value="Black"/>
        </Style>

        <!-- Style for the Chart Currency ComboBox -->
        <Style x:Key="ChartCurrencyComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="5,0"/>
        </Style>

    </Page.Resources>

    <Grid Background="#121212">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Top Info Section -->
        <StackPanel Orientation="Vertical" Margin="20" Grid.Row="0">
            <!-- Title row: coin name and symbol -->
            <TextBlock Text="{Binding DisplayTitle}" 
                 FontSize="30" 
                 FontWeight="Bold" 
                 Foreground="White" 
                 Margin="0,0,10,0"/>

            <!-- Subheader showing conversion info -->
            <TextBlock Text="{Binding SubTitle}" 
                 FontSize="16" 
                 Foreground="LightGray"
                 Margin="0,5,0,0"/>

            <!-- Timeframe buttons -->
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                <Button Content="24ч" Command="{Binding LoadChartCommand}" CommandParameter="1d" Style="{StaticResource TimeFrameButtonStyle}" />
                <Button Content="7дн" Command="{Binding LoadChartCommand}" CommandParameter="7d" Style="{StaticResource TimeFrameButtonStyle}" />
                <Button Content="1М" Command="{Binding LoadChartCommand}" CommandParameter="1m" Style="{StaticResource TimeFrameButtonStyle}" />
                <Button Content="3міс." Command="{Binding LoadChartCommand}" CommandParameter="3m" Style="{StaticResource TimeFrameButtonStyle}" />
                <Button Content="1р." Command="{Binding LoadChartCommand}" CommandParameter="1y" Style="{StaticResource TimeFrameButtonStyle}" />
            </StackPanel>

            <!-- Chart Currency Selection -->
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0" VerticalAlignment="Center">
                <TextBlock Text="Chart Currency:" Foreground="White" FontSize="16" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <ComboBox ItemsSource="{Binding ChartCurrencies}" 
                  SelectedItem="{Binding SelectedChartCurrency}" 
                  Style="{StaticResource ChartCurrencyComboBoxStyle}"
                  Width="100"/>
            </StackPanel>
        </StackPanel>

        <!-- Chart Section -->
        <Border Grid.Row="1" Margin="20" CornerRadius="10" Background="#1A1A1A" Padding="10">
            <lvc:CartesianChart Series="{Binding ChartSeries}"
                          LegendLocation="None"
                          Foreground="White"
                          Zoom="X"
                          DisableAnimations="False">
                <lvc:CartesianChart.AxisX>
                    <lvc:Axis Labels="{Binding ChartLabels}" Foreground="White" />
                </lvc:CartesianChart.AxisX>
                <lvc:CartesianChart.AxisY>
                    <lvc:Axis LabelFormatter="{Binding YFormatter}" Foreground="White" />
                </lvc:CartesianChart.AxisY>
            </lvc:CartesianChart>
        </Border>

        <!-- Footer row with "Last updated" and Back button -->
        <StackPanel Orientation="Horizontal" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                Margin="0,10,0,10" 
                Grid.Row="2">
            <TextBlock Text="{Binding LastUpdatedText}" 
                 Foreground="Gray" 
                 FontSize="14" 
                 Margin="0,0,20,0"/>
            <Button Content="Back" Command="{Binding NavigateBackCommand}" Width="80" />
        </StackPanel>
    </Grid>
</Page>
